<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_excercise"
        >

    <TextView
            android:id="@+id/weight_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="weight"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/weight_number_picker" />


    <NumberPicker
            android:id="@+id/weight_number_picker"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            />

    <NumberPicker
            android:id="@+id/reps_number_picker"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            />

    <TextView
            android:id="@+id/reps_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="reps"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/reps_number_picker" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"
            />

</androidx.constraintlayout.widget.ConstraintLayout>