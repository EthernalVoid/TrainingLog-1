<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tracker_editor_layout"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tracker_editor_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:id="@+id/hor_line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/horizontal_line_separator_grey"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/set_info"
                style="@style/TextDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4 sets of 3-5 reps"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/hor_line_1" />

        <ImageView
                android:id="@+id/hor_line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/horizontal_line_separator_grey"
                app:layout_constraintTop_toBottomOf="@id/set_info" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/picker_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/hor_line_2">

            <TextView
                    android:id="@+id/weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="weight"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@+id/weight_number_picker" />


            <NumberPicker
                    android:id="@+id/weight_number_picker"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline" />

            <NumberPicker
                    android:id="@+id/reps_number_picker"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline" />

            <TextView
                    android:id="@+id/reps_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:text="reps"
                    android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/reps_number_picker" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:id="@+id/add_set_button"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:backgroundTint="@color/colorPrimary"
                android:text="Add Set"
                android:textAppearance="@style/TextLightShadow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/delete_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picker_layout" />

        <Button
                android:id="@+id/delete_button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Delete"
                android:textAppearance="@style/TextLightShadow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_set_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>