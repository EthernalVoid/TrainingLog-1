<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/hor_line_1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/horizontal_line_separator_grey" />

        <TextView
                android:id="@+id/set_info"
                style="@style/TextDark"
                app:layout_constraintTop_toBottomOf="@id/hor_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4 sets of 3-5 reps"
                android:textAlignment="center" />

        <ImageView
                android:id="@+id/hor_line_2"
                app:layout_constraintTop_toBottomOf="@id/set_info"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/horizontal_line_separator_grey" />

        <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintBottom_toTopOf="@id/add_set_button"
                app:layout_constraintTop_toBottomOf="@id/hor_line_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="6dp">

            <TextView
                    android:layout_marginEnd="16dp"
                    android:id="@+id/weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="weight"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@+id/weight_number_picker" />


            <NumberPicker
                    android:layout_marginEnd="16dp"
                    android:id="@+id/weight_number_picker"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                    />

            <NumberPicker
                    android:layout_marginStart="16dp"
                    android:id="@+id/reps_number_picker"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline"
                    />

            <TextView
                    android:layout_marginStart="16dp"
                    android:id="@+id/reps_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="reps"
                    android:textAlignment="center"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/reps_number_picker" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".5"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:id="@+id/add_set_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Add Set"
                android:textAppearance="@style/TextLightShadow" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>