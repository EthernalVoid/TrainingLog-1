<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_background"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_exercise_selection">

        <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_barbell"
                android:tint="@color/text_light" />

        <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="New exercise"
                android:textColor="@android:color/white" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:id="@+id/name"
            style="@style/TextDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gutter_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/gutter_margin"
            android:text="exercise name"
            app:layout_constraintTop_toBottomOf="@id/toolbar"

            />

    <EditText
            android:id="@+id/exercise_name_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gutter_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/gutter_margin"
            android:inputType="textCapWords"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
            android:id="@+id/category"
            style="@style/TextDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gutter_margin"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/gutter_margin"
            android:text="category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exercise_name_editor"

            />

    <org.angmarch.views.NiceSpinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/gutter_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@id/category"

            />

    <Button
            android:id="@+id/create_exercise_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_spinner"
            />

</androidx.constraintlayout.widget.ConstraintLayout>